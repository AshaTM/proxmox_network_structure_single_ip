auto lo
iface lo inet loopback

iface ens18 inet manual

auto vmbr0
iface vmbr0 inet static
	address ####.####.####.####/24
	gateway ####.####.####.1 (mostly .1 if not set to something else)
	bridge-ports ens18
	bridge-stp off
	bridge-fd 0

auto vmbr1
iface vmbr1 inet static
	address 10.0.0.0/29 #Classless Inter-Domain Routing - (https://en.wikipedia.org/wiki/Classless_Inter-Domain_Routing#:~:text=links%20(glue%20network)-,a.b.c.d/29,-%2B0.0.0.7) Limits the IPs on the system to 6.
	bridge-ports none
	bridge-stp off
	bridge-fd 0
        post-up echo 1 > /proc/sys/net/ipv4/ip_forward
        post-up iptables -t nat -A POSTROUTING -s 10.0.0.0/29 -o vmbr0 -j MASQUERADE
        post-down iptables -t nat -D POSTROUTING -s 10.0.0.0/29 -o vmbr0 -j MASQUERADE

source /etc/network/interfaces.d/*